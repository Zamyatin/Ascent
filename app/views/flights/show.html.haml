%container
  %h2
    ="#{@flight.callsign}"
  %grid{:class => 'grid-pad'}
    %div{:class => 'col-1-3'}
      %h2
        The Data
        / %table
        /   %tr
        /     %td Max Altitude
        /     %td
        /       =@flight.max_altitude
        /   %tr
        /     %td Sounding Duration
        /     %td
        /       =@flight.duration
        /   %tr
        /     %td Distance Traveled
        /     %td
        /       =@flight.distance_traveled.round

    %div{:class => 'col-2-3'}
      %div.flight_chart
        = render :partial => 'data_visualizations/index'

      #below_chart
        %grid
          %grid{:class => 'col-3-4'}
            %h3 comments will go here
          %grid{:class => 'col-1-4'}
            %button#button-play
              %i.fa.fa-play
            %button#button-pause
              %i.fa.fa-pause

    .gauges{:class => 'grid grid-pad'}
      #gauge_3
      #gauge_1
      #gauge_4

  =form_for :likes, html: {id: "like"} do |f|
    =f.hidden_field :id, value: "#{params[:id]}"
    =f.submit "LIKE #{@flight.likes.length}" , class: 'like_button', id: "like_num"
  %input{type: "submit", value: "COMMENT"}

