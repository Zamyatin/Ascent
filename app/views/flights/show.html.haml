%container
  %h1
    ="#{@flight.callsign}"
  %grid{:class => 'grid-pad'}
    %div{:class => 'col-1-3'}
      %centered
        %h2
          The Data
        %table
          %tr
            %td.tdleft Burst Altitude
            %td.tdright
              ="#{@flight.max_altitude} m"
            / %td
            /   ="#{to_feet(@flight.max_altitude)} ft"
          / %tr
          /   %td.tdleft Time to Burst
          /   %td.tdright
          /     ="#{@flight.time_to_burst}"
          / %tr
          /   %td.tdleft Time of Descent
          /   %td.tdright
          /     ="#{@flight.time_of_descent}"
          / %tr
          /   %
          %tr
            %td.tdleft Distance Traveled
            %td.tdright
              ="#{@flight.distance_traveled.round} km"

          %tr
            %td.tdleft Trip Duration
            %td.tdright
              ="#{@flight.duration}"
          %tr
            %td
              %br
              %br
          %tr
            %td.tdleft
              =form_for :likes, html: {id: "like"} do |f|
                =f.hidden_field :id, value: "#{params[:id]}"
                =f.submit "LIKE: #{@flight.likes.length}" , class: 'like_button', id: "like_num"
            %td.tdright
              %input{type: "submit", value: "Show Comments", id: "show_comment"}
          %tr
            %td
              %h3
                =tweet_button(via: "Ascent", text: "Tweet this shit!", count: "horizontal")

    %div{:class => 'col-2-3'}
      %div.flight_chart
        = render :partial => 'data_visualizations/index'

      #below_chart
        %grid
          %grid{:class => 'col-3-4'}
            #comment-display
            =form_for :comment, method: 'POST', url: "/comments" do |f|
              =f.hidden_field :data_point_id, id: "data_point"
              =f.hidden_field :flight_id, value: "#{params[:id]}"
              =f.text_field :body, id: "comment_body"
              =f.submit "Add Comment", id: "comment-submit"
          %grid{:class => 'col-1-4'}
            %button#chart_map_button MAP
            %button#button-play
              %i.fa.fa-play

    .gauges{:class => 'grid grid-pad'}
      #gauge_6
      #gauge_3
      #gauge_1
      #gauge_4
      #gauge_7

#comment_container
  %header
    %h1 Comments
  #comment_roll
    -if @flight.comments.present?
      -@flight.comments.each do |comment|
        .comment_body
          %p.head
            =link_to comment.author.username, user_path(comment.author)
          %p.body= comment.body
    -else
      %p{id: "no-comment"} No Comments Yet



