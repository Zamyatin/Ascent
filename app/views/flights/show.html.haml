%flight_body
  %h1
    ="#{@flight.callsign}"
  %grid{:class => 'grid-pad'}
    %div{:class => 'col-1-3'}
      %h3
        / %table
        /   %tr
        /     %td Max Altitude
        /     %td
        /       =@flight.max_altitude
        /   %tr
        /     %td Sounding Duration
        /     %td
        /       =@flight.duration
        /   %tr
        /     %td Distance Traveled
        /     %td
        /       =@flight.distance_traveled.round

    %div{:class => 'col-2-3'}
      %div.flight_chart
        = render :partial => 'data_visualizations/index'

        / #below_chart
        /   %button#button-step-back
        /     %i.fa.fa-step-backward
        /   %button#button-play
        /     %i.fa.fa-play
        /   %button#button-pause
        /     %i.fa.fa-pause
        /   %button#button-step-forw
        /     %i.fa.fa-step-forward

    .gauges{:class => 'grid grid-pad'}
      #gauge_3
      #gauge_1
      #gauge_4

  =form_for :likes, html: {id: "like"} do |f|
    =f.hidden_field :id, value: "#{params[:id]}"
    =f.submit 'LIKE' , class: 'like_button'
  #like_num=@flight.likes.length
