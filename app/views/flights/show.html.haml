%h1
	="#{@flight.callsign}"

%h3
	="Max Altitude: #{@flight.max_altitude} m"
	%br
	="Sounding Duration: #{@flight.duration}"
	%br
	="Total Distance Traveled: #{@flight.distance_traveled.round} km"
	%br
	%button.show_all_data.button_left View Data
	%button.show_flight_chart.button_right View Chart/Map
%div.flight_chart
	= render :partial => 'data_visualizations/index'
%div.all_data
	-@data_points.each_with_index do |point, index|
		%br
		=index + 1
		-point[:data].each do |key, value|
			="#{key}: #{value}" if value
=form_for :likes, html: {id: "like"} do |f|
	=f.hidden_field :id, value: "#{params[:id]}"
	=f.submit 'LIKE' , class: 'like_button'
#like_num=@flight.likes.length


